    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const urlInput = document.querySelector('.url-input');
            const fetchBtn = document.getElementById('fetch-btn');
            const thumbnailSection = document.getElementById('thumbnail-section');
            const thumbnailPreview = document.getElementById('thumbnail-preview');
            const downloadBtn = document.getElementById('download-btn');
            const resolutionBtns = document.querySelectorAll('.resolution-btn');
            const errorMessage = document.getElementById('error-message');
            
            let currentVideoId = '';
            let currentResolution = 'maxres';
            
            // Extract video ID from YouTube URL
            function extractVideoId(url) {
                const regExp = /^.*((youtu.be\/)|(v\/)|(\/u\/\w\/)|(embed\/)|(watch\?))\??v?=?([^#&?]*).*/;
                const match = url.match(regExp);
                return (match && match[7].length === 11) ? match[7] : false;
            }
            
            // Generate thumbnail URL based on video ID and resolution
            function generateThumbnailUrl(videoId, resolution) {
                const baseUrl = 'https://img.youtube.com/vi/';
                
                switch(resolution) {
                    case 'maxres':
                        return `${baseUrl}${videoId}/maxresdefault.jpg`;
                    case 'sd':
                        return `${baseUrl}${videoId}/sddefault.jpg`;
                    case 'hq':
                        return `${baseUrl}${videoId}/hqdefault.jpg`;
                    case 'mq':
                        return `${baseUrl}${videoId}/mqdefault.jpg`;
                    default:
                        return `${baseUrl}${videoId}/maxresdefault.jpg`;
                }
            }
            
            // Fetch and display thumbnail
            fetchBtn.addEventListener('click', function() {
                const url = urlInput.value.trim();
                const videoId = extractVideoId(url);
                
                if (!videoId) {
                    errorMessage.style.display = 'block';
                    return;
                }
                
                errorMessage.style.display = 'none';
                currentVideoId = videoId;
                
                // Show thumbnail section
                thumbnailSection.style.display = 'block';
                
                // Update thumbnail preview
                const thumbnailUrl = generateThumbnailUrl(videoId, currentResolution);
                thumbnailPreview.src = thumbnailUrl;
            });
            
            // Handle resolution selection
            resolutionBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    resolutionBtns.forEach(b => b.classList.remove('active'));
                    this.classList.add('active');
                    currentResolution = this.getAttribute('data-resolution');
                    
                    if (currentVideoId) {
                        const thumbnailUrl = generateThumbnailUrl(currentVideoId, currentResolution);
                        thumbnailPreview.src = thumbnailUrl;
                    }
                });
            });
            
            // Download thumbnail
            downloadBtn.addEventListener('click', function() {
                if (!currentVideoId) return;
                
                const thumbnailUrl = generateThumbnailUrl(currentVideoId, currentResolution);
                
                // Create a temporary link to trigger download
                const link = document.createElement('a');
                link.href = thumbnailUrl;
                link.download = `youtube-thumbnail-${currentVideoId}-${currentResolution}.jpg`;
                document.body.appendChild(link);
                link.click();
                document.body.removeChild(link);
            });
            
            // Allow pressing Enter to fetch thumbnail
            urlInput.addEventListener('keypress', function(e) {
                if (e.key === 'Enter') {
                    fetchBtn.click();
                }
            });
        });
    </script>
</body>
